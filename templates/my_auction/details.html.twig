{% extends "base.html.twig" %}

{% block body %}
<div class="addAuctionK">
    {# Szczegóły aukcji #}
    <h1>{{ auction.title }}</h1>
    <p>Opis: {{ auction.description }}</p>
    <p>Cena: {{ auction.price }}</p>
    <p>Aukcja kończy się {{ auction.expiresAt | date("Y-m-d H:i:s") }}</p>

    {# Przyciski opcji/akcji na aukcji  #}
    
    <a  href="{{ url('my_auction_edit', {'id':auction.id}) }}">Edytuj</a>
    <br>
    {{ form_start(deleteForm) }}
        {{ form_widget(deleteForm.submit, {"attr": {"class":"btn-danger"}}) }}
        {{ form_rest(deleteForm) }}
    {{ form_end(deleteForm) }}
    <br>
    <a  href="{{ url('my_auction_index') }}">Powrót</a>

    {# {{ form_start(finishForm) }}
        {{ form_widget(finishForm.submit, {"attr": {"class":"btn-alert"}}) }}
        {{ form_rest(finishForm) }}
    {{ form_end(finishForm) }} #}
</div>
{% endblock %}